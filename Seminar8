void Show2dArray(int[,] array)
{
    for(int i = 0; i < array.GetLength(0); i++) // 0 размерность - строка
    {
        for(int j = 0; j < array.GetLength(1); j++) // 1 размерность - столбец
            Console.Write(array[i,j] + " ");
 
            Console.WriteLine();
